<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".login">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/boyatbeach"
        tools:ignore="ContentDescription,ImageContrastCheck" />
    <TextView
        android:id="@+id/welcmetxt"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:text="@string/welcome"
        android:textSize="40sp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/urzeit"
        android:layout_toEndOf="@+id/logo"
        android:textColor="@color/white"
        android:paddingVertical="50dp"
        />

    <TextView
        android:id="@+id/lgn_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login"
        android:layout_below="@+id/logo"
        android:layout_margin="10dp"
        android:fontFamily="@font/urzeit"
        android:layout_centerInParent="true"
        android:textSize="30sp"
        android:textColor="@color/white"
        />

    <EditText
        android:id="@+id/et1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lgn_txt"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        android:hint="@string/emobile"
        android:fontFamily="@font/urzeit"
        android:importantForAutofill="no"
        android:inputType="number"
        android:textColor="@color/black"
        android:textSize="30sp"
        tools:ignore="TouchTargetSizeCheck,TextContrastCheck" />

    <EditText
        android:id="@+id/et2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et1"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        android:hint="@string/epass"
        android:fontFamily="@font/urzeit"
        android:textColor="@color/black"
        android:importantForAutofill="no"
        android:inputType="textPassword"
        android:textSize="30sp"
        tools:ignore="TouchTargetSizeCheck,TextContrastCheck" />
    <TextView
        android:id="@+id/new_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_user"
        android:fontFamily="@font/urzeit"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_below="@+id/et2"
        android:layout_marginStart="150dp"
        />
    <TextView
        android:id="@+id/register_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/register"
        android:fontFamily="@font/urzeit"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="20dp"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_toEndOf="@+id/new_user"
        android:layout_below="@+id/et2"
        />

    <Button
        android:id="@+id/lgn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/register_txt"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/white"
        android:text="@string/login"
        android:fontFamily="@font/urzeit"
        android:textColor="@color/background"
        android:textSize="20sp"
        tools:ignore="DuplicateSpeakableTextCheck" />

</RelativeLayout>