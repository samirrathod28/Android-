<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".register_user"
    android:background="@color/background">

    <ImageView
        android:id="@+id/img"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/boy"
        tools:ignore="ContentDescription" />
    <TextView
        android:id="@+id/txt"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:text="@string/reg_scn"
        android:fontFamily="@font/urzeit"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:padding="20dp"
        android:layout_toEndOf="@+id/img"
        android:layout_margin="10dp"
        />

    <EditText
        android:id="@+id/nm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:background="@color/white"
        android:hint="@string/enter_name"
        android:fontFamily="@font/urzeit"
        android:importantForAutofill="no"
        android:inputType="text"
        android:textColor="@color/black"
        android:textColorHint="#78909C"
        android:textSize="25sp"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/mobile_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nm"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@color/white"
        android:hint="@string/enter_mobile_no"
        android:importantForAutofill="no"
        android:fontFamily="@font/urzeit"
        android:inputType="number"
        android:textColor="@color/black"
        android:textColorHint="#78909C"
        android:textSize="25sp"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/psd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mobile_no"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@color/white"
        android:fontFamily="@font/urzeit"
        android:hint="@string/enter_password"
        android:importantForAutofill="no"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:textColorHint="#78909C"
        android:textSize="25sp"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/cfm_psd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/psd"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@color/white"
        android:fontFamily="@font/urzeit"
        android:hint="@string/confirm_password"
        android:importantForAutofill="no"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:textColorHint="#78909C"
        android:textSize="25sp"
        tools:ignore="TouchTargetSizeCheck"
        />

    <TextView
        android:id="@+id/already"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/already_have_an_account"
        android:fontFamily="@font/urzeit"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_below="@+id/cfm_psd"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        />
    <TextView
        android:id="@+id/log_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login"
        android:fontFamily="@font/urzeit"
        android:textSize="20sp"
        android:layout_toEndOf="@+id/already"
        android:layout_below="@+id/cfm_psd"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        />

    <Button
        android:id="@+id/rgst_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/register"
        android:layout_centerInParent="true"
        android:layout_below="@id/already"
        android:fontFamily="@font/urzeit"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:backgroundTint="@color/white"
        android:textColor="@color/background"
        />

</RelativeLayout>